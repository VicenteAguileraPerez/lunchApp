<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Ayuda">


    <TextView
        android:id="@+id/textView6_tituloayudaycomentarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/soporte_y_contacto" />

    <EditText
        android:id="@+id/editText_correodecontacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:autofillHints="" />

    <EditText
        android:id="@+id/editText_comentariodeenvio"
        android:layout_width="match_parent"
        android:layout_height="347dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Escribe tu comentario" />

    <Button
        android:id="@+id/button_enviarcomentario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ENVIAR" />

</LinearLayout>