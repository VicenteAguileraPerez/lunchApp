<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="fragmentsPackage.quejasysugenencias"
    >
    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="20dp"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageViewcorreo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="0.60"
            android:src="@drawable/icon_contact_orange" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_margin="10dp"
            android:layout_marginStart="0dp"
            android:layout_weight="0.20"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/correo_app"
            android:textAlignment="center"
            android:textColor="#ff6634"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageViewequipo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:contentDescription="@string/imagen_grupo_de_personas"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="0.60"
            android:src="@drawable/icon_equipo_orange" />

        <TextView
            android:id="@+id/vicentename"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_margin="10dp"
            android:layout_weight="0.20"
            android:gravity="center"
            android:text="@string/nombre_vicente"
            android:textAlignment="center"
            android:textColor="#ff6634"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/victorname"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_margin="10dp"
            android:layout_weight="0.20"
            android:gravity="center"
            android:text="@string/nombre_vic"

            android:textAlignment="center"
            android:textColor="#ff6634"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/omarname"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_margin="10dp"
            android:layout_weight="0.20"
            android:gravity="center"
            android:text="@string/nombre_jalil"
            android:textAlignment="center"
            android:textColor="#ff6634"
            android:textSize="15sp" />
    </LinearLayout>




</android.support.constraint.ConstraintLayout>