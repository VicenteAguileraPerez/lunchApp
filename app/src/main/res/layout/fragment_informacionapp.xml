<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fragmentsPackage.quejasysugenencias"
    >
    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:weightSum="3"
        android:layout_margin="16dp"
        android:padding="20dp">



    <ImageView
        android:id="@+id/imageViewcorreo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.50"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/icon_contact_orange" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.15"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="10dp"
        android:text="LUNCHAPPWO@GMAIL.COM"
        android:textColor="#ff6634"
        />
    <ImageView
        android:id="@+id/imageViewequipo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.50"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/icon_equipo_orange" />

    <TextView
        android:id="@+id/vicentename"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="0.15"
        android:text="VICENE AGUILERA PÉREZ"
        android:textAlignment="center"
        android:textColor="#ff6634"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/victorname"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="0.15"
        android:text="VICTOR PÉREZ ESPINO"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="#ff6634"
        />
    <TextView
    android:id="@+id/omarname"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_margin="10dp"
    android:textSize="20sp"
    android:layout_weight="0.15"
    android:text="OMAR JALIL CASTILLO ZAMUDIO"
    android:textAlignment="center"
    android:textColor="#ff6634"
    />
    </LinearLayout>




</android.support.constraint.ConstraintLayout>